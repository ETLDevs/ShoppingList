<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>SHOPPING LIST</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css"
    />
    <script src="/javascripts/index.js" type="module" defer></script>
  </head>
  <body>
    <nav class="navBar">
      <button class="toggleLists">Active List</button>
    </nav>
    <div class="container">
      <div class="searchContainer">
        <label for="search"> Search and add items to the list</label>
        <input type="text" name="search" class="search" placeholder="Search an item...">
        <ul class="searchResults"></ul>
      </div>
        
      <hr>
      <p>Or choose manually</p>
      <div class="allGroceries">
        <% categories.forEach(category => {%>
        <div class="category <%=category.name%>">
          <h3>
            <i class="fa-solid <%= category.items[0].icon %>"></i>
            <%=category.name%>
          </h3>
          <ul>
            <%category.items.forEach(item => {%>
            <li>
              <%=item.name%>
              <button
                data-id="<%=item.id%>"
                class="addItem fa-solid fa-plus"
              ></button>
            </li>
            <%})%>
          </ul>
        </div>
        <%}) %>
      </div>
    </div>
  </body>
</html>
